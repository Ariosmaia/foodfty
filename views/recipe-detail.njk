{% extends "layout.njk"%}

{% block head %}
		<title>Detalhes Receitas - Foodfy</title>
{% endblock %}

{% block content %}
		<div class="content">
				<div class="center">
					<section class="receipe-detail-header">
						<img class="receipe-detail-img" src={{item.image}} alt="">
						<h1 class="receipe-detail-title" >{{item.title}}</h1>
						<p class="receipe-detail-author"> {{item.author}}</p>
					</section>
					
					<section class="ingredients">
						<div>
							<h2>Ingredientes</h2>
							<span class="show-ingredients">ESCONDER</span>
						</div>
						<ul class="ingredients-list">
							{% for ingredient in item.ingredients %}
								<li>{{ingredient}}</li>
							{% endfor %}
						</ul>
					</section>

					<section class="preparation">
						<div>
							<h2>Modo de preparo</h2>
							<span class="show-preparation">ESCONDER</span>
						</div>
						<ul class="preparation-list">
							{% for preparation in item.preparation %}
								<li>{{preparation}}</li>
							{% endfor %}
						</ul>
					</section>

					<section class="information">
						<div>
							<h2>Informações adicionais</h2>
							<span class="show-information">ESCONDER</span>
						</div>
						<p>{{item.information}}</p>
					</section>
					
				</div>
		</div>
{% endblock %}